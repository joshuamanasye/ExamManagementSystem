@{
    ViewBag.Title = "Upload Soal";
}

<a href="@Url.Action("Index", "Exam")" class="btn btn-secondary mt-3">Back</a>

<h2>Upload Soal untuk @ViewBag.CourseName</h2>

<form asp-action="UploadExamFile" method="post" enctype="multipart/form-data">
    <input type="hidden" name="examId" value="@ViewBag.ExamId" />
    <div class="form-group">
        <label for="file">Select file</label>
        <input type="file" name="file" id="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Upload</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
